{% extends 'patient/index.html.twig' %}
{% block content %}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Mes Dossiers</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Accueil</a></li>
              
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Liste de mes dossiers</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                  <thead>
                  <tr>
                    <th>Date Consultation</th>
                    <th>Nom Médecin</th>
                    <th>Prénom Médecin</th>
                    <th>Actions</th>
                  </tr>
                  </thead>
                  <tbody>
                    {% for dossier in dossiers %}
                 
                  <tr>
                    <td>{{ dossier.dateConsultation | date('d-m-Y H:i')}}</td>
                    <td>{{ dossier.rendezVous.medecin.nom }}</td>
                   <td>{{ dossier.rendezVous.medecin.prenom }}</td>
                    <td>
                     
                    </td>
                  </tr>
                  {% endfor %}
                  </tbody>
                
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->

           
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
{% endblock %}