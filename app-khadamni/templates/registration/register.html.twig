{% extends 'khadamni/index.html.twig' %}

{% block title %}Inscription!{% endblock %}

{% block dynamic %}
        <section class="mt-4">
            <div class="container mt-4">
                
    
                <div class="row">
                    <div class="col-12">
                        <h2 class="contact-title">Inscription</h2>
                    </div> 
                </div>
                {{ form_start(form) }}
                <div class="row">
                    
                    <div class="col-6">
                        <h2 class="text-white p-3 text-center" style="background-color: #fb246a">Informations compte</h2>
                      
                                    
                                    <div class="form-group">
                                        {{ form_label(form.prenom) }}    
                                        {{ form_widget(form.prenom) }}         
                                    </div>
                                     <div class="form-group">
                                        {{ form_label(form.nom) }}  
                                        {{ form_widget(form.nom) }}         
                                    </div>
                                     <div class="form-group">
                                        {{ form_label(form.numeroTelephone) }} 
                                        {{ form_widget(form.numeroTelephone) }}         
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form.adresse) }} 
                                        {{ form_widget(form.adresse) }}         
                                    </div>
                                    
                                   
                                    
                            
                    </div> 
                    <div class="col-6">
                                    <h2 class="text-white p-3 text-center" style="background-color: #fb246a">Informations personnelles</h2>
                                    <div class="row">
                                        <div class="col">
                                              <div class="form-group">
                                        {{ form_label(form.email) }} 
                                        {{ form_widget(form.email) }}         
                                             </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                             <div class="form-group">
                                                <label>Mot de passe: </label>
                                                {{ form_widget(form.password) }}         
                                             </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                             <div class="form-group">
                                                 {{ form_widget(form.role) }}         
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mt-4">
   <button type="submit" class="btn btn-primary">Inscrire</button>
                                    </div>
                                   
                                   
                                    
                           
                    </div> 
                    
                                        
                                    
                </div>
                {{ form_end(form) }}
                
            </div>
        </section>

{% endblock %}
