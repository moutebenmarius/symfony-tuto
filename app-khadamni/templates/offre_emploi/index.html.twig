{% extends 'admin/index.html.twig' %}

{% block title %}Gestion des recruteurs{% endblock %}

{% block main %}
     <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>Gestion des offres</h1>
            </div>
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item active"><a class="btn btn-primary" href="{{ path('app_logout') }}">Déconnxion</a></li>
              </ol>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-header">
                 
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                  <table id="example2" class="table table-bordered table-hover">
                    <thead>
                      <tr>
                        <th>Titre</th>
                        <th>Publié par</th>
                        <th>Publié en</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                    {% for offre in offre_emplois %}
                      <tr>
                        <td>{{ offre.titre }}</td>
                        <td>{{ offre.recruteur.nom }} {{ offre.recruteur.prenom }}</td>
                        <td>{{ offre.ajouterEn | date('d-m-Y H:i') }}
                        </td>
                        <td>
                          
                            <a href="{{ path('app_offre_emploi_show',{'id':offre.id}) }}" class="btn btn-sm btn-info">detailer</a>
                            <a onclick="return confirm('êtes-vous sûr de vouloir supprimer  ?')" href="{{ path('supprimer_offre', {'id': offre.id}) }}" class="btn btn-sm btn-danger">supprimer</a>
                            
                        </td>
                      </tr>
                      {% endfor %}
                      
                  </table>
                </div>
                <!-- /.card-body -->
              </div>
              <!-- /.card -->
            </div>
            <!-- /.col -->
          </div>
          <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
      </section>
      <!-- /.content -->
    </div>
{% endblock %}
