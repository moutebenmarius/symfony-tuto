{% extends 'recruteur/index.html.twig' %}

{% block title %}Gestion des offres
{% endblock %}

{% block main %}
	<!-- Content Wrapper. Contains page content -->
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6"></div>
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item active">
								<a class="btn btn-primary" href="{{ path('app_logout') }}">Déconnxion</a>
							</li>
						</ol>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>

		<!-- Main content -->
		<section class="content">
			<div class="container-fluid">
				<div class="row">
					<div class="col-12">
						<div class="card">
							<div class="card-header">
								<h3 class="card-title">Mes offres</h3>
							</div>
							<!-- /.card-header -->
							<div class="card-body">
								<a class="btn btn-success m-3" href="{{ path('ajouter_offre') }}">Publier une offres</a>
								<table id="example2" class="table table-bordered table-hover">
									<thead>
										<tr>
											<th>Titre</th>
											<th>Description</th>
											<th>Publié en</th>
											<th>Actions</th>
										</tr>
									</thead>
									<tbody>
										{% for offre in offres %}
											<tr>
												<td>{{ offre.titre }}</td>
												<td>{{ offre.description }}</td>
												<td>{{ offre.ajouterEn | date('d-m-Y H:i') }}
												</td>
												<td>
													<a href="{{ path('modifier',{'id':offre.id}) }}" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
													<a href="{{ path('detail',{'id':offre.id}) }}" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
													<a onclick="return confirm('êtes-vous sûr de vouloir supprimer  ?')" href="{{ path('supprimer_offre', {'id': offre.id}) }}" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>

												</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
							<!-- /.card-body -->
						</div>
						<!-- /.card -->
					</div>
					<!-- /.col -->
				</div>
				<!-- /.row -->
			</div>
			<!-- /.container-fluid -->
		</section>
		<!-- /.content -->
	</div>
{% endblock %}
