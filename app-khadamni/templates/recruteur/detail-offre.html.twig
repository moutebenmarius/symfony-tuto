{% extends 'recruteur/index.html.twig' %}

{% block title %}Gestion des offres
{% endblock %}

{% block main %}
	<!-- Content Wrapper. Contains page content -->
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6"></div>
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item active">
								<a class="btn btn-primary" href="{{ path('app_logout') }}">Déconnxion</a>
							</li>
						</ol>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>

		<!-- Main content -->
		<section class="content">
			<div class="container-fluid">
				<div class="row">
					<div class="col-12">
						<div class="card">
							<div class="card-header">
								<h3 class="card-title">Detail d'une offre</h3>
							</div>
							<!-- /.card-header -->
							<div class="card-body">


								<table class="table">
									<tbody>

										<tr>
											<th>Titre</th>
											<td>{{ offre_emploi.titre }}</td>
										</tr>
										<tr>
											<th>Description</th>
											<td>{{ offre_emploi.description }}</td>
										</tr>
										<tr>
											<th>Salaire</th>
											<td>{{ offre_emploi.salaire }}</td>
										</tr>
										<tr>
											<th>Type Emploi</th>
											<td>{{ offre_emploi.typeEmploi }}</td>
										</tr>
										<tr>
											<th>Ajouter En</th>
											<td>{{ offre_emploi.ajouterEn ? offre_emploi.ajouterEn|date('d-m-Y H:i:s') : '' }}</td>
										</tr>
									</tbody>
								</table>

								<a href="{{ path('mes_offres') }}">retour à la liste</a>
							</div>
							<!-- /.card-body -->
						</div>
						<!-- /.card -->
					</div>
					<!-- /.col -->
				</div>
				<!-- /.row -->
			</div>
			<!-- /.container-fluid -->
		</section>
		<!-- /.content -->
	</div>
{% endblock %}
