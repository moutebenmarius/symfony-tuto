{% extends 'formateur_d/index.html.twig' %}

{% block title %}formation index{% endblock %}

{% block dynamic %}
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h5 class="text-center">Séances de formation {{ formation.titre }}</h5>
          </div>
         
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            {% for message in app.flashes('info') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
            <!-- /.card -->

            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Liste des séances</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
              <a title="démarrer une séance" href="{{ path('demarrer_une_seance', {'id': formation.id}) }}" class="btn btn-sm btn-primary m-3"><i class="fa fa-2x fa-play-circle" aria-hidden="true"></i>
</a>
               <a title="programmer une séance" href="{{ path('programmer_une_seance', {'id': formation.id}) }}" class="btn btn-sm btn-dark m-3"><i class="fa fa-2x fa-calendar" aria-hidden="true"></i>
</a>
               <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Date Séance</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
       {% for sc in seances %}
            <tr>
                <td>{{ sc.dateSeance|date('d-m-Y') }}</td>
                <td class="text-center">
                        {%
                        if  not sc.estTermine
                        %}
                   <a title="terminer" href="{{ path('terminer_sc', {"id": sc.id}) }}" class="btn btn-sm btn-primary">

                   <i class="fa fa-2x fa-pause-circle-o" aria-hidden="true"></i>


                   </a>
                       
                        {% else %}
<span class="badge badge-success"><i class="fa fa-check fa-2x" aria-hidden="true"></i></span>

                        {% endif %}
                </td>
                <td>
                    <a href="#" class="btn btn-secondary" title="présences"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-check-fill" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
  <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
</svg></a>
                    <a title="importer des ressources" href="{{ path('ressource_seances', {"id":sc.id}) }}" class="btn btn-primary"><i class="fa fa-upload" aria-hidden="true"></i>
</a>
                </td>    
            </tr>
        {% else %}
            <tr>
                <td colspan="7">aucun résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
           </table>
               
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  
{% endblock %}


