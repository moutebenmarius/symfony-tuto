{% extends 'admin/index.html.twig' %}

{% block title %}formation index{% endblock %}

{% block dynamic %}
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Gestion formations</h1>
          </div>
         
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            {% for message in app.flashes('info') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
            <!-- /.card -->

            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Liste des formations</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
              <a href="{{ path('app_formation_new') }}" class="btn btn-sm btn-primary">Ajouter formation</a>
               <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Formateur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
       {% for formation in formations %}
            <tr>
                <td>{{ formation.titre }}</td>
                <td>{{ formation.formateur.prenom }} {{ formation.formateur.nom }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_formation_show', {'id': formation.id}) }}"><i class="fas fa-eye"></i></a>
                      <a class="btn btn-info" href="{{ path('app_formation_edit', {'id': formation.id}) }}"><i class="fas fa-user-edit"></i></a>
                      <a class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer')" href="{{ path('supprimer_formation', {'id': formation.id}) }}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
               
            </tr>
        {% else %}
            <tr>
                <td colspan="7">aucun résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
           </table>
               
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  
{% endblock %}


